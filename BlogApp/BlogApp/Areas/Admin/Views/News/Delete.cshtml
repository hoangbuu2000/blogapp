@model BlogApp.Areas.Admin.Data.News

@{
    ViewBag.Title = "Xóa tin tức";
}

<h2>Xóa tin tức</h2>

<h3>Bạn có chắc muốn xóa tin này không?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tiêu đề
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            Nội dung 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Content)
        </dd>

        <dt>
            Ảnh đại diện
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Image)
        </dd>

        <dt>
            Ngày xuất bản
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PubDate)
        </dd>

        <dt>
            Chủ đề
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Topic)
        </dd>

        <dt>
            Nguồn tin
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Website.Name)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-success" /> 
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-success" })
        </div>
    }
</div>
