@model BlogApp.Areas.Admin.Data.LoginViewModel
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Areas/Admin/Views/Shared/_Login.cshtml";
}

<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
    @using (Html.BeginForm("Login", "Accounts", FormMethod.Post, new { @class = "login100-form validate-form" }))
    {
        <span class="login100-form-title p-b-49">
            ĐĂNG NHẬP
        </span>

        @Html.ValidationMessage("Login")

        <div class="wrap-input100 validate-input m-b-23" data-validate="Thông tin bắt buộc">
            <span class="label-input100">Tài khoản</span>
            @Html.TextBoxFor(model => model.Username, new { @class="input100", placeholder="Nhập tài khoản" })
            <span class="focus-input100" data-symbol="&#xf206;"></span>
        </div>
        @Html.ValidationMessageFor(model => model.Username)

        <div class="wrap-input100 validate-input" data-validate="Thông tin bắt buộc">
            <span class="label-input100">Mật khẩu</span>
            @Html.PasswordFor(model => model.Password, new { @class = "input100", placeholder = "Nhập mật khẩu" })
            <span class="focus-input100" data-symbol="&#xf190;"></span>
        </div>
        @Html.ValidationMessageFor(model => model.Password)

        <div class="text-right p-t-8 p-b-31">
            <a href="#">
                Quên mật khẩu?
            </a>
        </div>

        <div class="container-login100-form-btn">
            <div class="wrap-login100-form-btn">
                <div class="login100-form-bgbtn"></div>
                <button class="login100-form-btn">
                    Đăng nhập
                </button>
            </div>
        </div>

        <div class="txt1 text-center p-t-54 p-b-20">
            <span>
                Hoặc đăng ký với
            </span>
        </div>

        <div class="flex-c-m">
            <a href="#" class="login100-social-item bg1">
                <i class="fa fa-facebook"></i>
            </a>

            <a href="#" class="login100-social-item bg2">
                <i class="fa fa-twitter"></i>
            </a>

            <a href="#" class="login100-social-item bg3">
                <i class="fa fa-google"></i>
            </a>
        </div>

        <div class="flex-col-c p-t-155">
            <span class="txt1 p-b-17">
                Hoặc đăng ký
            </span>

            @Html.ActionLink("Đăng ký", "Register", null, new { @class="txt2" })
        </div>
    }
</div>
