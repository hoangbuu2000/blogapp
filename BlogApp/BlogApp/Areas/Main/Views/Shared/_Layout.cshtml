@{
    var url = Url.Content("~/") + "Images";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Site Metas -->
    <title>@ViewBag.Title - Tech Blog</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Design fonts -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">

    <!-- Site Icons -->
    <link rel="shortcut icon" href="@url/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" href="@url/apple-touch-icon.png">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", false)

</head>
<body>
    <div id="wrapper">
        @Html.Action("Header", "Home")
        @RenderBody()
        @Html.Partial("_Footer", new ViewDataDictionary(ViewData) { { "url", url } })
        <div class="dmtop">Scroll to Top</div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/js")
    @Scripts.Render("~/Vendor/Ckeditor")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script>
        $(window).scroll(function () {
            if ($(this).scrollTop() > 1) {
                $('.dmtop').css({ bottom: "25px" });
            } else {
                $('.dmtop').css({ bottom: "-100px" });
            }
        });
        $('.dmtop').click(function () {
            $('html, body').animate({ scrollTop: '0px' }, 800);
            return false;
        });
    </script>
</body>
</html>