@model BlogApp.Areas.Admin.Data.Topic

@{
    ViewBag.Title = "Xóa chủ đề";
}

<h2>XÓA CHỦ ĐỀ</h2>

<h3>Bạn có chắc muốn xóa chủ đề @Model.Name?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên chủ đề
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Số bài viết
        </dt>
        
        <dd>
            @ViewBag.SoBaiViet
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-success"
                   onclick="return confirm('Bạn có chắc muốn xóa chủ đề này?')"/>
            @Html.ActionLink("Quay lại", "Index", null, new { @class="btn btn-success" })
        </div>
    }
</div>
